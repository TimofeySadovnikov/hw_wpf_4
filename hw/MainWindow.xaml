<Window x:Class="hw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="MyConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" Text="Text1" VerticalAlignment="Center" HorizontalAlignment="Center"
                 Visibility="{Binding ElementName=CBox1, Path=IsChecked, Converter={StaticResource MyConverter}}" />
        <TextBox Grid.Column="1" Text="Text2" VerticalAlignment="Center" HorizontalAlignment="Center"
                 Visibility="{Binding ElementName=CBox2, Path=IsChecked, Converter={StaticResource MyConverter}}" />
        <TextBox Grid.Column="2" Text="Text3" VerticalAlignment="Center" HorizontalAlignment="Center"
                 Visibility="{Binding ElementName=CBox3, Path=IsChecked, Converter={StaticResource MyConverter}}" />
        <CheckBox Name="CBox1" Grid.Row="1" Grid.Column="0" Content="Show" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" />
        <CheckBox Name="CBox2" Grid.Row="1" Grid.Column="1" Content="Show" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" />
        <CheckBox Name="CBox3" Grid.Row="1" Grid.Column="2" Content="Show" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" />
    </Grid>
</Window>
